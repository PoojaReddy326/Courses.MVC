@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "AllCoursesUser";
}<div class="row">
    <div class="col-md-7">
        <div class="row"><div class="col"><h2>List of Courses</h2></div> 
    </div>
    <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>CourseName</th>                 
                    </tr>
                    
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CourseName</td>                            
                        </tr>
                    }
                </tbody>
            </table>
            <div class="col text-end">
                <a asp-controller="DashBoard" asp-action="UserDashBoard" > Next</a>
            </div>
        </div>
    </div>
</div>