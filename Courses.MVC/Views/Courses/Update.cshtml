
@model CourseViewModel
@{
    ViewData["Title"] = "Update";
} 
<h1>Update Course</h1>
<form asp-controller="Courses" asp-action="Update" method="post">
    <input type="hidden" asp-for="CourseId" />
    <div class="row">
        <div class="col-md-4">
           @* <div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="mb-2"><label asp-for="CourseName" class="form-label"></label>
                <input type="text" asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName"></span>
            <div class="mt-2 d-grid"><input type="submit" class="btn btn-primary" value="Update Course" /></div>
        </div>
    </div>
    </div>
</form>