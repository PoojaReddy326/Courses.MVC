@model CourseViewModel
@{
    ViewData["Title"] = "Delete";
}
<body style="background-image: linear-gradient(rgba(4,9,30,0.7),rgba(4,9,30,0.7)),url(https://thumbs.dreamstime.com/b/education-school-university-books-college-classes-16441446.jpg);">
    <div class="row">
        <div class="col-md-7">
            <div class="row">
                <div class="col">
                    <h1 style="color:chocolate;font-weight:bold">Delete</h1>
                </div>                
            </div>            
        </div>        
    </div>
</body> 
<form asp-controller="Courses" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CourseId" />
    <div class="row">
        <div class="col-md-5">
            <ul class="list-group">
                <li class="list-group-item"><b>Course :</b> @Model.CourseName</li>
            </ul>
            <div style="color:white">
                Are sure do you want to delete this Course?
        </div>
        <div>
            <button type="submit" class="btn btn-danger" >Delete</button>
        </div>
            <a asp-controller="Courses" asp-action="AllCourses" style="color:white">Back to List</a>
        </div>
    </div>
</form>