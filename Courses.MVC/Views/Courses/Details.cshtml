
@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Course";
} <h1>Index</h1> 
<div class="row offset-2 pt-4">
    <div class="col-md-9">
        <table class="table table-hover border-2">
            <thead>
                <tr>
                    <th scope="col">Course Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                    <tr class="table-dark">
                        <td>@item.CourseName</td>
                        @*<td class="pl-3">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-light">Details</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

