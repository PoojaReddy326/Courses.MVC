@model CourseViewModel
@{
    ViewData["Title"] = "Create";
} 
<body style="background-image: linear-gradient(rgba(4,9,30,0.7),rgba(4,9,30,0.7)),url(https://thumbs.dreamstime.com/b/education-school-university-books-college-classes-16441446.jpg);">
    <div class="row">
        <div class="col-md-7">
            <div class="row">
                <div class="col">
                    <h1 style="color:chocolate;font-weight:bold"> Create a Course</h1>
                </div>
            </div>
        </div>
    </div>
</body>
<form asp-controller="Courses" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-2">
                <label asp-for="CourseName" class="form-label"></label>
                <input type="text" asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Add New" />
            </div>            
        </div>        
    </div>    
</form> 