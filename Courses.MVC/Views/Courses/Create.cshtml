@model CourseViewModel
@{
    ViewData["Title"] = "Create";
} 
<h1> Create a Course</h1> 
<form asp-controller="Courses" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            
            <div class="mb-2">
                <label asp-for="CourseName" class="form-label"></label>
                <input type="text" asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Add New" />
            </div>
        </div>
    </div>
</form> 