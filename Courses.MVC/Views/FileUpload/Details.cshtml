@model FileViewModel
@{
    ViewData["Title"] = "Details";
}

<h1> Image Details</h1>
<form asp-controller="FileUpload" asp-action="Details" method="post">
    <input type="hidden" asp-for="Id" />

<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            <li class="list-group-item"><b>FileName :</b>@Model.FileName</li>
            <li class="list-group-item"><b>FileData :</b>@Model.FileData</li>
        </ul>
        <a asp-controller="FileUpload" asp-action="Index">Back to List</a>
    </div>
</div>
</form>